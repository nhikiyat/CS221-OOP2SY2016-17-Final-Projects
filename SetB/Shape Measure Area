    private void rdoCircleActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(rdoCircle.isSelected())
        {
            disabledSetB();
            disabledSetC();
            txtInputCR.setEnabled(true);
            rdoGetAC.setEnabled(true);
            rdoGetPC.setEnabled(true);
        }
    }                                         

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        temp = "";
        temp2 = "";
        area = 0;
        perimeter = 0;
        length = 0;
        width = 0;
        disableAllItems();
        enabledFirstThree();
    }                                        

    private void btnExitActionPerformed(java.awt.event.ActionEvent evt) {                                        
        dispose();
    }                                       

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        disableAllItems();
        enabledFirstThree();
    }                                    

    private void rdoGetACActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetAC.isSelected())
        {
            rdoGetPC.setEnabled(false);
            try
            {
                temp = txtInputCR.getText();
                radius = Double.parseDouble(temp);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                area = pi * (radius * radius);
                txtGetResultA.setText("Area: " + area);
            }
        }
    }                                        

    private void rdoGetPCActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetPC.isSelected())
        {
            rdoGetAC.setEnabled(false);
            try
            {
                temp = txtInputCR.getText();
                radius = Double.parseDouble(temp);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                perimeter = 2.0 * (pi * radius);
                txtGetResultA.setText("Circumference: " + perimeter);
            }
            
        }   
    }                                        

    private void rdoRectangleActionPerformed(java.awt.event.ActionEvent evt) {                                             
        if(rdoRectangle.isSelected())
        {
            disabledSetA();
            disabledSetC();
            txtInputUL.setEnabled(true);
            txtInputUW.setEnabled(true);
            rdoGetRA.setEnabled(true);
            rdoGetRP.setEnabled(true);
        }
    }                                            

    private void rdoGetRAActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetRA.isSelected())
        {
            rdoGetRP.setEnabled(false);
            try
            {
                temp = txtInputUL.getText();
                temp2 = txtInputUW.getText();
                length = Double.parseDouble(temp);
                width = Double.parseDouble(temp2);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                area = length * width;
                txtGetResultB.setText("Area: " + area);
            }
            
        }
    }                                        

    private void rdoGetRPActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetRP.isSelected())
        {
            rdoGetRA.setEnabled(false);
            try
            {
                temp = txtInputUL.getText();
                temp2 = txtInputUW.getText();
                length = Double.parseDouble(temp);
                width = Double.parseDouble(temp2);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                perimeter = (2.0 * length) + (2.0 * width);
                txtGetResultB.setText("Perimeter: " + perimeter);
            }
            
        }
    }                                        

    private void rdoSquareActionPerformed(java.awt.event.ActionEvent evt) {                                          
        disabledSetA();
        disabledSetB();
        txtInputSS.setEnabled(true);
        rdoGetSA.setEnabled(true);
        rdoGetSP.setEnabled(true);
    }                                         

    private void rdoGetSAActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetSA.isSelected())
        {
            rdoGetSP.setEnabled(false);
            try
            {
                temp = txtInputSS.getText();
                side = Double.parseDouble(temp);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                area = side * side;
                txtGetResultC.setText("Area: " + area);
            }
            
        }
    }                                        

    private void rdoGetSPActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(rdoGetSP.isSelected())
        {
            rdoGetSA.setEnabled(false);
            try
            {
                temp = txtInputSS.getText();
                side = Double.parseDouble(temp);
            }
            catch(NumberFormatException errors)
            {
                JOptionPane.showMessageDialog(null, "Enter the correct input!");   
            }
            finally
            {
                perimeter = side * 4.0;
                txtGetResultC.setText("Perimeter: " + perimeter);
            }
            
        }
    }                                        
    
    public void enabledFirstThree()
    {
        rdoCircle.setEnabled(true);
        rdoRectangle.setEnabled(true);
        rdoSquare.setEnabled(true);
        rdoCircle.setSelected(false);
        rdoRectangle.setSelected(false);
        rdoSquare.setSelected(false);
    }
    
    public void disableAllItems()
    {
        txtInputCR.setText("");
        txtInputUL.setText("");
        txtInputUW.setText("");
        txtInputSS.setText("");
        txtGetResultA.setText("");
        txtGetResultB.setText("");
        txtGetResultC.setText("");
        
        disabledSetA();
        disabledSetB();
        disabledSetC(); 
    }
    
    public void disabledSetA()
    {
        rdoCircle.setEnabled(false);
        txtInputCR.setEnabled(false);
        txtGetResultA.setEnabled(false);
        rdoGetAC.setEnabled(false);
        rdoGetPC.setEnabled(false);
        rdoGetAC.setSelected(false);
        rdoGetPC.setSelected(false);
    }
    public void disabledSetB()
    {
        rdoRectangle.setEnabled(false);
        txtInputUL.setEnabled(false);
        txtInputUW.setEnabled(false);
        txtGetResultB.setEnabled(false);
        rdoGetRA.setEnabled(false);
        rdoGetRP.setEnabled(false);
        rdoGetRA.setSelected(false);
        rdoGetRP.setSelected(false);
    }
    
    public void disabledSetC()
    {
        rdoSquare.setEnabled(false);
        txtInputSS.setEnabled(false);
        txtGetResultC.setEnabled(false);
        rdoGetSA.setEnabled(false);
        rdoGetSP.setEnabled(false);
        rdoGetSA.setSelected(false);
        rdoGetSP.setSelected(false);
    }
